<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textSize="48sp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/ConfirmationText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/sending_code"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="03044848492"
        android:id="@+id/Verification_activity_PhoneNumber_TextView"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/ConfirmationText"
        android:textColor="@color/colorPrimaryDark"/>

    <LinearLayout
        android:id="@+id/activity_verification_number_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:weightSum="6">

        <EditText
            android:id="@+id/ConfirmationNumber"
            style="@style/verificationEditTexts"/>
        <EditText
            android:id="@+id/ConfirmationNumber1"
            style="@style/verificationEditTexts"/>
        <EditText
            android:id="@+id/ConfirmationNumber2"
            style="@style/verificationEditTexts"/>
        <EditText
            android:id="@+id/ConfirmationNumber3"
            style="@style/verificationEditTexts"/>
        <EditText
            android:id="@+id/ConfirmationNumber4"
            style="@style/verificationEditTexts"/>
        <EditText
            android:id="@+id/ConfirmationNumber5"
            style="@style/verificationEditTexts"/>
    </LinearLayout>

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_verification_number_widget"
        android:text="@string/verify_button"
        android:backgroundTint="@color/windowBackground"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_gravity="right"/>
</LinearLayout>